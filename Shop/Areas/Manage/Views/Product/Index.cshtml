@using Shop.Models.HomeShop;
@using Shop.ViewModels.Home;

@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Product>
<div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">İd</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Intial Price</th>
                <th scope="col">Final Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Category</th>
                <th scope="col">Delete</th>
                <th scope="col">Update</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var item in Model ?? new List<Product>())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Image</td>
                    <td>@item.InitialPrice</td>
                    <td>@item.FinalPrice</td>
                    <td>@item.Quantity</td>
                    <td>@item.CategoryProducts</td>
                    <td> <img src="~/Admin/images/Brand/@item.ImgUrl"></td>
                    <td><a asp-area="Manage" asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                    <td><a asp-area="Manage" asp-controller="Brand" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>
